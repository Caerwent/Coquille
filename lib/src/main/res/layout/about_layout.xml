<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AboutMainContainer"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/about_left_padding"
            android:paddingRight="@dimen/about_right_padding">

            <ImageView
                android:id="@+id/about_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/about_logo_top_margin"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/brand_logo_big" />

            <TextView
                android:id="@+id/about_app_name"
                style="@style/AboutText.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/about_header_top_margin"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/about_version"
                style="@style/AboutText.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/about_revision"
                style="@style/AboutText.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/about_copyright"
                style="@style/AboutText.SectionNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/about_copyright_top_margin" />

            <LinearLayout
                android:id="@+id/about_data"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>